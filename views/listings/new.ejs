<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">

       <div class="col-8 offset-2">
        <h3 style="margin-top: 2rem;">Create a New Listing</h3>
        <form  style="margin-top: 2rem;" method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
           <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input name="listings[title]" placeholder="Enter Title" type="text" id="title" class="form-control" required>
            <div class="valid-feedback">looks good!</div>
            <div class="invalid-feedback">Please enter a valid input</div>   
        </div>
    <div class="mb-3">
        
        <label class="form-label" for="price">Price</label>
        <input required name="listings[price]" placeholder="Enter price" type="number" id="price" class="form-control">
        <div class="valid-feedback">looks good!</div>
        <div class="invalid-feedback">Please enter a valid input</div>
    </div>
           <div class="mb-3">
            <label class="form-label" for="url">Upload_Image</label>
            <input required name="url"  type="file" id="url" class="form-control">
            <div class="valid-feedback">looks good!</div>
            <div class="invalid-feedback">Please enter a valid input</div>
           </div>
        
          <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea required name="listings[description]" placeholder="Enter description" type="text" id="description" class="form-control"></textarea>
            <div class="valid-feedback">looks good!</div>
            <div class="invalid-feedback">Please enter a valid input</div>
          </div>
           <div class="row">
           <div class="col-md-4 mb-3" >
            <label class="form-label" for="country">Country</label>
            <input required name="listings[country]" placeholder="Enter country" type="text" id="country" class="form-control">
            <div class="valid-feedback">looks good!</div>
            <div class="invalid-feedback">Please enter a valid input</div> 
        </div>
         
            <div class="col-md-8 mb-3">
                <label class="form-label" for="location">Location</label>
         
                <input required name="listings[location]" placeholder="Enter location" type="text" id="location" class="form-control">
                <div class="valid-feedback">looks good!</div>
                <div class="invalid-feedback">Please enter a valid input</div>
            </div>

           </div>
            <br><br>
            <button class="btn btn-danger"> Add</button>
        </form>
       </div>
    </div>
</body>